extends layout

block content
    main
        section#about_us
            .section-panel
                .section-head
                    h1 About Us
                .section-content
                    .medium-content-wrapper
                        h2 Profile
                        img.profile-picture(src="/assets/img/profile_picture.jpg")
                        .text-justify.text-container
                            span Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus sem nisl, 
                            | fermentum nec lorem ac, viverra consequat orci. Nulla venenatis magna vitae 
                            | mattis varius. Maecenas eget tempus mauris. Quisque et erat non nunc efficitur 
                            | tempor. Duis ullamcorper suscipit consequat.
                        .clear-both
                        h2 Enquiry
                        span If you have any enquiry, feel free to contact us by email or phone below.
                        table.contact-detail
                            tr
                                td
                                    i.fa.fa-phone.v-align-middle
                                    span.hide-in-small &emsp;Phone
                                td :
                                td +00 12341234123
                            tr
                                td
                                    i.fa.fa-envelope.v-align-middle
                                    span.hide-in-small &emsp;Email
                                td :
                                td admin@ecrawler.com
                        .text-center
                            form(method="post" action="mailto:admin@ecrawler.com")
                                button.ec-button.ec-blue(type="submit")
                                    strong Send Email! 
                                    i.fa.fa-envelope

block scripts
    script(src="assets/js/views/about.js")
    script(src="assets/js/controllers/aboutController.js")
