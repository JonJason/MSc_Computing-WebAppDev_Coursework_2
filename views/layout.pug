doctype html
html
    head
        meta(charset = "utf-8")
        meta(
            name = "viewport"
            content = "width=device-width, initial-scale=1.0"
        )
        meta(
            name="author"
            content="1748330"
        )
        // student ID
        link(
            rel = "icon"
            type = "image/ico" href="assets/img/icon/favicon.ico"
        )
        link(
            rel = "stylesheet"
            href = "assets/css/main.min.css"
        )
        // Font Awesome Icon
        link(
            rel = "stylesheet"
            href = "node_modules/font-awesome/css/font-awesome.min.css"
        )
        title English Crawler: #{desc}
    body(data-page=page)
        
        include includes/header.pug
        .page-wrapper
            block content
            include includes/footer.pug
        .page-overlay
        script(src="assets/js/util.js")
        script(src="assets/js/storage.js")
        script(src="assets/js/views/layout.js")
        script(src="assets/js/controllers/layoutController.js")
        block scripts
        script(src="assets/js/app.js")
        
